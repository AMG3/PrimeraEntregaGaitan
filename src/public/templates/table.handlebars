<h3 class="m-0 mb-4">Productos</h3>
{{#if products.length}}
<div class="row row-cols-1 row-cols-md-3 g-4" id="products">
    {{#each products}}
    <div class="col">
        <div class="card" style="width: 18rem;">
            <img src="{{this.thumbnail}}" class="card-img-top product-img" alt="{{this.title}}" />
            <div class="card-body">
                <h5 class="card-title">{{this.title}} - ${{this.price}} (Stock {{this.stock}})</h5>
                <p class="card-text">{{this.description}}</p>
                {{#if ../isLogged}}
                <a href="/editar-producto.html?id={{this.id}}" class="btn btn-primary"><img src="data:image/png;base64,"></a>
                <button data-id="{{this.id}}" class="btn btn-danger delete-button"><img src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAABgAAAAYCAYAAADgdz34AAAABmJLR0QA/wD/AP+gvaeTAAAAZUlEQVRIiWNgGCmggYGB4T8a7iBGIyMWsf8UOgbFTCYKDSMbwIKBYvU09wGxFqC7kGgfDhofjFowasGoBRQAFiLVoRfr2Ip5rGDAgugplEavxXBhZD1EAT8GBoYnJFjwBKpnGAIAUcAmPA1WYN0AAAAASUVORK5CYII="></a>
                {{/if}}
                <button data-id="{{this.id}}" class="btn btn-success add-button mt-2">+ Agregar al carrito</a>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{else}}
<h2>No hay ning√∫n producto</h2>
{{/if}}